extends ./layout/index
block contenido
   main.container.mt-5 
       h1.text-center.mt-5 #{pagina}
       blockquote.text-center Lee Sobre clientes y sus experiencias
       include ./layout/bloque_testimonial
       .row 
         .col-md-12
           h2.d-block.w-100.text-center Agrega Testimonial
           if(errores)
                  each error in errores 
                       .alert-col.alert-danger.text-center= error.mensaje
         .row.justify-content-center.col
              .col-md-8
                   form(action="/testimoniales" method="Post")
                       .form-group 
                             label(for="nombre") Nombre  
                             input#nombre(type="text",placeholder="Tu nombre",name="nombre",class="form-control", value=nombre)
                       .form-group 
                             label(for="correo") Correo Electronico  
                             input#correo(type="email",placeholder="example@correo.com",name="correo",class="form-control",value=correo)
                       .form-group 
                             label(for="mensaje") mensaje  
                             textarea#mensaje(name="mensaje", cols="30", rows="10", class="form-control" placeholder="Tu mensaje")= mensaje
                       input.btn.btn-success.btn-block(type="submit",value="Enviar") 